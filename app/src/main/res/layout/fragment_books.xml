<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_home"
    tools:context="com.spappstudio.myapplication.mainfragments.BooksFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_corners_2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/book_list"
                    android:textColor="@color/textColor"
                    android:textSize="30sp" />


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <Button
                        android:id="@+id/buttonAddBook"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_1"
                        android:onClick="onClickAddBook"
                        android:text="@string/add_book"
                        android:textColor="@color/textColor" />
                </TableRow>

            </LinearLayout>


            <ListView
                android:id="@+id/listViewBooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_corners_2"
                android:padding="8dp" />

        </LinearLayout>

</FrameLayout>